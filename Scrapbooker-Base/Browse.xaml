<Page x:Class="Stage_Scrapbooker.Browse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stage_Scrapbooker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Browse" Loaded="PageLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Browse" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" />
        <!--
        TODO: Fix it so the images will show side bi side and the user should be able to scroll the window
        -->
        <StackPanel Grid.Row="1" Name="simpleGrid" >
        </StackPanel>

    </Grid>
</Page>
