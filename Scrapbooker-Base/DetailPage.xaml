<Page x:Class="Stage_Scrapbooker.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stage_Scrapbooker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Image Information" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" />

        <!-- TODO: Fix order: Image bigger, above information/ Fix text description/ Get image source from click in Browse page-->
        <StackPanel Grid.Row="1" Name="simpleGrid" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,0,0,0">
            <TextBlock x:Name="FileName" Text="" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
            <TextBlock x:Name="FileFormat" Text="" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
            <TextBlock x:Name="FileSize" Text="" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
        </StackPanel>

    </Grid>
</Page>
